<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Enable Bluetooth Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/enableBluetoothCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"
        android:padding="16dp"
        android:minHeight="48dp"
        android:onClick="onEnableBluetoothClicked">

        <!-- Text for Enable Bluetooth -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enable_bluetooth_text"
            android:textSize="18sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <!-- Master Mode Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/masterModeCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"
        android:padding="16dp"
        android:minHeight="48dp"
        android:onClick="onMasterModeClicked">

        <!-- Text for Master Mode -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/master_mode_text"
            android:textSize="18sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <!-- Slave Mode Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/slaveModeCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:padding="16dp"
        android:minHeight="48dp"
        android:onClick="onSlaveModeClicked">

        <!-- Text for Slave Mode -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/slave_mode_text"
            android:textSize="18sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

</LinearLayout>
