<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- TextView to display detailed sensor information -->
    <TextView
        android:id="@+id/sensorInfoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sensor Information"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:paddingBottom="8dp" />

    <!-- TextView to display real-time sensor values -->
    <TextView
        android:id="@+id/sensorDataTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sensor Values"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:paddingTop="16dp" />
</LinearLayout>
