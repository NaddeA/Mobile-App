<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Button to show the sensors -->
    <Button
        android:id="@+id/btShowSensors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Sensors" />

    <!-- TextView to display the list of sensors -->
    <TextView
        android:id="@+id/tvSensorList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:text="Sensors will be listed here..." />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sensorRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="8dp" />

</LinearLayout>
